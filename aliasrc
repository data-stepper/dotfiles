
# Git stuff
alias gce="~/dotfiles/scripts/git_commit_folder.sh"
alias gs="git status"

alias guni="cd ~/Documents/Uni"
alias scs="cd ~/dotfiles/scripts"

# Always use neovim
alias v="nvim-qt"

# vrc opens both neovim config files
alias vrc="nvim-qt ~/.config/nvim/*.vim"

alias x="chmod +x"

alias rm="rm -rf"
alias mv="mv -iv"
alias cp="cp -rv"
alias mkdir="mkdir -pv"

alias prompt="~/dotfiles/prompt.sh"
alias al="nvim-qt ~/dotfiles/aliasrc"
alias venv=". ~/dotfiles/scripts/./open_venv.sh"

alias sdn="shutdown now"

alias update="sudo apt update && sudo apt -y upgrade"

