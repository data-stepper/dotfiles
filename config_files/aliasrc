
# Git stuff
alias gs="git status"

# Always use neovim, bye bye gui neovim
alias v="nvim"

# vrc opens both neovim config files
alias vrc="nvim ~/.config/nvim/*.vim"

alias x="chmod +x"

alias rm="rm -rf"
alias mv="mv -iv"
alias cp="cp -rv"
alias mkdir="mkdir -pv"

alias al="nvim ~/dotfiles/aliasrc"

alias sdn="sudo systemctl poweroff"

# Also add snap store update
alias update="sudo pacman -Syu && sudo yay -Syu && sudo npm install -g npm"

